@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/">Hello @User.Identity?.Name</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/Logout">Logout</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/SignUp">SignUp</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-page="/SignIn">SignIn</a>
		</li>
	}
</ul>
